                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
                        <ListViewItem Background="Green">TEST</ListViewItem>
