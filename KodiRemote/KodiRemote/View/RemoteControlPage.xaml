    <Page.Resources>
        <converter:NullVisibilityConverter OnNull="Collapsed" x:Key="OnNotNullVisibilityConverter"/>
        <converter:NullVisibilityConverter OnNull="Visible" x:Key="OnNullVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Pivot Style="{StaticResource TabsStylePivotStyle}" Visibility="{x:Bind ViewModel.Kodi.CurrentlyPlayingItem, Mode=OneWay, Converter={StaticResource OnNullVisibilityConverter}}">
            <PivotItem>
                <PivotItem.Header>
                    <uc:TabHeader Label="Remote Control" Glyph="{StaticResource MaterialDesign-ArrowPad}" />
                </PivotItem.Header>
                <uc:RemoteControl ViewModel="{x:Bind ViewModel, Mode=OneWay}"/>
            </PivotItem>
        </Pivot>

        <Pivot Style="{StaticResource TabsStylePivotStyle}" Visibility="{x:Bind ViewModel.Kodi.CurrentlyPlayingItem, Mode=OneWay, Converter={StaticResource OnNotNullVisibilityConverter}}">
            <PivotItem>
                <PivotItem.Header>
                    <uc:TabHeader Label="Remote Control" Glyph="{StaticResource MaterialDesign-ArrowPad}" />
                </PivotItem.Header>
                <uc:RemoteControl ViewModel="{x:Bind ViewModel, Mode=OneWay}"/>
            </PivotItem>

            <PivotItem>
                <PivotItem.Header>
                    <uc:TabHeader Label="Currently Playing" Glyph="{StaticResource MaterialDesign-Info}" />
                </PivotItem.Header>
                <RelativePanel>
                    <uc:CurrentlyPlaying x:Name="MovieDetailsCurrentlyPlaying" ViewModel="{x:Bind ViewModel.Kodi.CurrentlyPlayingItem, Mode=OneWay}" RelativePanel.AlignLeftWithPanel="True"/>
                    <uc:MovieDetails x:Name="MovieDetails" RelativePanel.AlignRightWithPanel="True" RelativePanel.RightOf="MovieDetailsCurrentlyPlaying" Orientation="Vertical"/>
                </RelativePanel>
            </PivotItem>

            <PivotItem >
